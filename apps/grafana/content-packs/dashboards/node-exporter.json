{
  "id": null,
  "uid": "weaura-node-exporter",
  "title": "Node Exporter Metrics",
  "tags": ["weaura-default"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "label": "Prometheus",
        "type": "datasource",
        "pluginId": "prometheus",
        "current": {
          "selected": false,
          "text": "Prometheus",
          "value": "Prometheus"
        }
      },
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "query": "label_values(node_uname_info, nodename)",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "current": {
          "selected": false,
          "text": "",
          "value": ""
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$node:.*\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage %"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes{instance=~\"$node:.*\"} - node_memory_MemAvailable_bytes{instance=~\"$node:.*\"}",
          "refId": "A",
          "legendFormat": "Used Memory"
        },
        {
          "expr": "node_memory_MemAvailable_bytes{instance=~\"$node:.*\"}",
          "refId": "B",
          "legendFormat": "Available Memory"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Disk Space Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{instance=~\"$node:.*\", fstype!=\"tmpfs\", mountpoint=\"/\"} / node_filesystem_size_bytes{instance=~\"$node:.*\", fstype!=\"tmpfs\", mountpoint=\"/\"}) * 100)",
          "refId": "A",
          "legendFormat": "Disk Usage %"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{instance=~\"$node:.*\", device!~\"lo|veth.*\"}[5m])",
          "refId": "A",
          "legendFormat": "RX {{device}}"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{instance=~\"$node:.*\", device!~\"lo|veth.*\"}[5m])",
          "refId": "B",
          "legendFormat": "TX {{device}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "title": "System Load",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "node_load1{instance=~\"$node:.*\"}",
          "refId": "A",
          "legendFormat": "Load 1m"
        },
        {
          "expr": "node_load5{instance=~\"$node:.*\"}",
          "refId": "B",
          "legendFormat": "Load 5m"
        },
        {
          "expr": "node_load15{instance=~\"$node:.*\"}",
          "refId": "C",
          "legendFormat": "Load 15m"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Disk I/O",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total{instance=~\"$node:.*\"}[5m])",
          "refId": "A",
          "legendFormat": "Read {{device}}"
        },
        {
          "expr": "rate(node_disk_written_bytes_total{instance=~\"$node:.*\"}[5m])",
          "refId": "B",
          "legendFormat": "Write {{device}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}
