{
  "id": null,
  "uid": "weaura-loki-logs",
  "title": "Loki Logs Explorer",
  "tags": ["weaura-default"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "label": "Loki",
        "type": "datasource",
        "pluginId": "loki",
        "current": {
          "selected": false,
          "text": "Loki",
          "value": "Loki"
        }
      },
      {
        "name": "namespace",
        "label": "Namespace",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        },
        "query": "label_values(namespace)",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "current": {
          "selected": false,
          "text": "default",
          "value": "default"
        }
      },
      {
        "name": "pod",
        "label": "Pod",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        },
        "query": "label_values({namespace=\"$namespace\"}, pod)",
        "refresh": 1,
        "multi": false,
        "includeAll": true,
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Stream",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "targets": [
        {
          "expr": "{namespace=\"$namespace\", pod=~\"$pod\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "id": 2,
      "title": "Log Rate by Level",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "targets": [
        {
          "expr": "sum by (level) (rate({namespace=\"$namespace\", pod=~\"$pod\"} | json | __error__=\"\" [5m]))",
          "refId": "A",
          "legendFormat": "{{level}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "logs/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Log Rate by Pod",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "targets": [
        {
          "expr": "sum by (pod) (rate({namespace=\"$namespace\", pod=~\"$pod\"} [5m]))",
          "refId": "A",
          "legendFormat": "{{pod}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "logs/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "targets": [
        {
          "expr": "{namespace=\"$namespace\", pod=~\"$pod\"} |~ \"(?i)(error|exception|failed)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "id": 5,
      "title": "Warning Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "targets": [
        {
          "expr": "{namespace=\"$namespace\", pod=~\"$pod\"} |~ \"(?i)(warn|warning)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    }
  ]
}
